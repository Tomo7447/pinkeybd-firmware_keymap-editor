#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define ZMK_POINTING_DEFAULT_SCRL_VAL 80

&lt {
    tapping-term-ms = <150>;
    flavor = "tap-preferred";
    require-prior-idle-ms = <0>;
};

&mt {
    tapping-term-ms = <150>;
    flavor = "tap-preferred";
};

/ {
    behaviors {
        rot_kp: sensor_rotate_kp {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            bindings = <&kp>, <&kp>;
        };

        comm_question: comm_question {
            compatible = "zmk,behavior-mod-morph";
            label = "COMM_QUESTION";
            bindings = <&kp COMMA>, <&kp LS(SLASH)>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        minus_single: minus_single {
            compatible = "zmk,behavior-mod-morph";
            label = "MINUS_SINGLE";
            bindings = <&kp MINUS>, <&kp LS(N7)>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        backslash_double: backslash_double {
            compatible = "zmk,behavior-mod-morph";
            label = "BACKSLASH_DOUBLE";
            bindings = <&kp SLASH>, <&kp AT_SIGN>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        period_exclamation: period_exclamation {
            compatible = "zmk,behavior-mod-morph";
            label = "PERIOD_EXCLAMATION";
            bindings = <&kp PERIOD>, <&kp LS(NUMBER_1)>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };
    };

    combos {
        compatible = "zmk,combos";

        lpare {
            bindings = <&kp LS(N8)>;
            key-positions = <3 2>;
            layers = <0>;
        };

        rpare {
            bindings = <&kp LS(N9)>;
            key-positions = <4 3>;
            layers = <0>;
        };

        lbracket {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <14 13>;
            layers = <0>;
        };

        rbracket {
            bindings = <&kp NON_US_HASH>;
            key-positions = <14 15>;
            layers = <0>;
        };

        lessthan {
            bindings = <&kp LS(LESS_THAN)>;
            key-positions = <24 25>;
            layers = <0>;
        };

        morethan {
            bindings = <&kp RS(GREATER_THAN)>;
            key-positions = <25 26>;
            layers = <0>;
        };

        tab {
            bindings = <&kp TAB>;
            key-positions = <4 15>;
            layers = <0 1>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        // |        /       |       ,       |       .       |      -        |      ;       |    ESC         |                   |           |       L      |       R       |       D       |       Y       |      P      |
        // |        A       |       O       |       E       |      I        |      U       |    SCROLLLOCK  |                   |           |       G      |       N       |       T       |       S       |      K      |
        // |        X       |       C       |       V       |      W        |      Q       |    TAB         |                   |     F     |       J      |       H       |       M       |       B       |      Z      |
        // |    L_SHIFT     |               |               |   LOWER / Jp  |    Space     |    LEFT_WIN    |                   |  R_SHIFT  |      ENTER   |  LOWER2 / Ja  |               |               |   FUN_L     |
        // ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

        default_layer {
            bindings = <
&kp Q             &kp W           &kp E        &kp R           &kp T          &mt LG(PERIOD) F7  &kp Y        &kp U      &kp I                   &kp O                &kp P
&kp A             &kp S           &kp D        &kp F           &kp G          &none              &kp H        &kp J      &kp K                   &kp L                &minus_single
&mt LEFT_SHIFT Z  &kp X           &kp C        &kp V           &kp B          &mt LS(LG(S)) F10  &kp N        &kp M      &comm_question          &period_exclamation  &backslash_double
&kp LEFT_CONTROL  &lt 1 LEFT_ALT  &lt 2 SPACE  &kp LEFT_SHIFT  &kp BACKSPACE  &mkp LCLK          &lt 3 ENTER  &mkp RCLK  &mt LEFT_ALT LC(SPACE)
            >;

            sensor-bindings = <&rot_kp PG_DN PG_UP>;
        };

        Number_layer {
            bindings = <
&none  &none   &none   &none   &none   &none   &kp N7        &kp N8        &kp N9                      &kp LS(MINUS)  &kp LS(SEMI)
&none  &none   &none   &none   &none   &none   &kp NUMBER_4  &kp N5        &kp NUMBER_6                &kp LS(INT1)   &kp MINUS
&none  &none   &none   &none   &none   &none   &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3                &kp PERIOD     &kp SLASH
&none  &trans  &trans  &trans  &kp N0  &trans  &trans        &trans        &mt LEFT_ALT DOUBLE_QUOTES
            >;

            sensor-bindings = <&rot_kp C_AC_ZOOM_IN C_AC_ZOOM_OUT>;
        };

        Arrow_layer {
            bindings = <
&none              &none   &none   &none   &none           &none   &none           &none            &none  &none  &none
&kp C_VOLUME_UP    &none   &none   &none   &none           &none   &kp UP_ARROW    &none            &none  &none  &none
&kp C_VOLUME_DOWN  &none   &none   &none   &none           &none   &kp DOWN_ARROW  &kp RIGHT_ARROW  &none  &none  &none
&kp C_MUTE         &trans  &trans  &trans  &kp LEFT_ARROW  &trans  &trans          &trans           &none
            >;

            sensor-bindings = <&rot_kp C_AC_ZOOM_IN C_AC_ZOOM_OUT>;
        };

        Symbol_layrer {
            bindings = <
&mo 5              &trans  &trans  &trans  &trans         &trans  &kp LEFT_BRACKET  &kp LS(NUMBER_6)   &kp SQT        &kp HASH                 &kp PERCENT
&kp C_VOL_UP       &trans  &trans  &trans  &kp LC(F)      &none   &trans            &kp DOUBLE_QUOTES  &kp SEMICOLON  &kp LS(INTERNATIONAL_1)  &kp DEL
&kp C_VOLUME_DOWN  &trans  &trans  &trans  &kp LG(LS(S))  &none   &trans            &trans             &trans         &trans                   &trans
&kp C_MUTE         &trans  &trans  &trans  &trans         &trans  &trans            &trans             &trans
            >;

            sensor-bindings = <&inc_dec_kp C_AC_ZOOM_IN C_AC_ZOOM_OUT>;
        };

        Func_layer {
            bindings = <
&kp F1      &kp F2   &kp F3   &kp F4   &kp F5   &none   &kp F6   &kp F7   &kp F8      &kp F9   &kp F10
&kp F11     &kp F12  &kp F13  &kp F14  &kp F15  &none   &kp F16  &kp F17  &kp F18     &kp F19  &kp F20
&none       &none    &none    &none    &none    &none   &none    &none    &none       &none    &none
&kp LSHIFT  &trans   &trans   &trans   &none    &trans  &trans   &trans   &kp RSHIFT
            >;
        };

        Bt_layer {
            bindings = <
&none  &none  &none  &none  &none         &none  &none         &none         &none  &none  &none
&none  &none  &none  &none  &none         &none  &none         &none         &none  &none  &none
&none  &none  &none  &none  &none         &none  &bt BT_SEL 1  &bt BT_SEL 2  &none  &none  &none
&none  &none  &none  &none  &bt BT_SEL 0  &none  &none         &none         &none
            >;
        };
    };
};
